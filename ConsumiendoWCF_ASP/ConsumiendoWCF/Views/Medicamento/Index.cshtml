
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <title>Index</title>
    <link href="https://cdn.datatables.net/v/dt/dt-1.13.6/datatables.min.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid">
        <div class="title container-flex">
            <h2 style="text-align: center;">Medicamento</h2>

        </div>
        <div class="container-flex">
            <div>
                <label> Filtrar por nombre del Medicamento: </label>
                <input onkeyup="filtrarDatos()" id="filtroNombre" type="tex" name="filtroNombre" value="" />

            </div>
            <div id="container-table">

            </div>
            <!-- Button trigger modal -->
            <button type="button" onclick="abrirModal(0)" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                Agregar
            </button>

            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <label>
                                <h4 id="lb-titulo"></h4>
                            </label><button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <label>Id Medicamento</label>
                                <input name="Medicamento" type="text" id="idMedicamento" class="form-control Limpiar " placeholder="Id Medicamento" readonly />
                            </div>
                            <div class="form-group">
                                <label>Nombre</label>
                                <input name="Nombre" type="text" id="idNombre" class="form-control Limpiar obligatorio" placeholder="Nombre" />
                            </div>
                            <div class="form-group">
                                <label>Concentración</label>
                                <input name="Concentración" type="text" id="idConcentracion" class="form-control Limpiar obligatorio" placeholder="Concentracion" />
                            </div>

                            <div class="form-group">
                                <label>Forma Farmaceutica</label>
                                <select id="idFormaFarmaceutica" class="form-control Limpiar">
                                </select>

                                <div class="form-group">
                                    <label>Precio</label>
                                    <input name="Precio" type="number" id="idPrecio" class="form-control Limpiar obligatorio" placeholder="Precio" />
                                </div>

                                <div class="form-group">
                                    <label>Presentación</label>
                                    <input name="presentacion" type="number" id="idStock" class="form-control Limpiar obligatorio" placeholder="Stock" />
                                </div>

                                <div class="form-group">
                                    <label>Stock</label>
                                    <input name="Stock" type="number" id="idPresentacion" class="form-control Limpiar obligatorio" placeholder="Presentacion" />
                                </div>

                            </div>

                        </div>
                        <div class="modal-footer">
                            <button id="btn-modal-cerrar" type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                            <button type="button" onclick="guardar()" class="btn btn-primary">Guardar</button>
                        </div>
                        <div id="divError">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
    <script src="~/Scripts/Medicamento.js"></script>
    <script src="https://cdn.datatables.net/v/dt/dt-1.13.6/datatables.min.js"></script>

</body>
</html>
